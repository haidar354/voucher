            "url": {
              "raw": "{{baseUrl}}/transaksi?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["transaksi"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
