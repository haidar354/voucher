    {
      "name": "Transactions",
      "item": [
        {
          "name": "Create Transaction (Auto-Generate Vouchers)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('transaksiId', jsonData.data.transaksi.id);",
                  "    console.log('Transaction ID saved:', jsonData.data.transaksi.id);",
                  "    console.log('Vouchers generated:', jsonData.data.summary.totalVoucher);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"kodeStruk\": \"TEST-{{$timestamp}}\",\n  \"totalBelanja\": 250000,\n  \"catatan\": \"Test transaction from Postman\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/transaksi",
              "host": ["{{baseUrl}}"],
              "path": ["transaksi"]
            }
          }
        },
        {
          "name": "Get Transactions",
